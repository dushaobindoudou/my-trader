# Database
DATABASE_URL="postgresql://username:password@localhost:5432/my_trader"
DIRECT_URL="postgresql://username:password@localhost:5432/my_trader"

# Supabase (如果使用 Supabase)
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# LLM APIs
OPENAI_API_KEY="your_openai_api_key"
ANTHROPIC_API_KEY="your_anthropic_api_key"

# App
NEXTAUTH_SECRET="your_nextauth_secret"
NEXTAUTH_URL="http://localhost:3000"

# Web3Auth 配置
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here
NEXT_PUBLIC_WEB3AUTH_NETWORK=testnet
NEXT_PUBLIC_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key_here

# 应用配置
NEXT_PUBLIC_APP_NAME=AIphaTrader
NEXT_PUBLIC_APP_DESCRIPTION=web3辅助投资系统

# OKX API 配置（用于K线图数据）
NEXT_PUBLIC_OKX_API_BASE=https://www.okx.com
# 注意：OKX 公开市场数据接口不需要 API Key，但如果需要私有接口，请配置以下变量
# OKX_API_KEY=your_okx_api_key
# OKX_SECRET_KEY=your_okx_secret_key
# OKX_PASSPHRASE=your_okx_passphrase

# 市场数据 API 配置
# ==================

# CoinGecko API（主要数据源，推荐）
# 免费账户：每月 10,000 次请求，每分钟 30 次
# 注册地址：https://www.coingecko.com/api/pricing
# Demo API Key 使用 x-cg-demo-api-key 请求头
COINGECKO_API_KEY=your_coingecko_demo_api_key_here

# CoinMarketCap API（备用数据源）
# 免费账户：每月 10,000 次请求，每分钟 30 次
# 注册地址：https://coinmarketcap.com/api/
# 优先使用 CMC_API_KEY，如未设置则使用 COINMARKETCAP_API_KEY
CMC_API_KEY=your_coinmarketcap_api_key_here

# 定时任务配置
# 用于保护定时任务 API 的密钥（可选，但建议设置）
CRON_SECRET=your_cron_secret_here
